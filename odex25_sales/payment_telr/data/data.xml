<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="payment_acquirer_telr" model="payment.acquirer">
            <field name="name">Telr</field>
            <field name="image_128" type="base64" file="payment_telr/static/src/img/telr_icon.png" />
            <field name="provider">telr</field>
            <field name="company_id" ref="base.main_company" />
            <field name="view_template_id" ref="payment_telr.telr_form" />
<!--            <field name="environment">test</field>-->
            <field name="pre_msg">
                <![CDATA[
<p>You will be redirected to the Telr website after clicking on payment button.</p>]]>
            </field>
            <field name="telr_merchant_id">****</field>
            <field name="telr_api_key">****</field>
            <field name="module_id" ref="base.module_payment_telr" />
            <field name="description" type="html">
                <p>
                    Telr Payment Services supports credit cards, debit cards thru pay payment.
                </p>
                <ul class="list-inline">
                    <li><i class="fa fa-check" />Online Payment</li>
                    <li><i class="fa fa-check" />Payment Status Tracking</li>
                </ul>
            </field>
            <field name="payment_icon_ids" eval='[(6, 0, [
                ref("payment.payment_icon_cc_maestro"),
                ref("payment.payment_icon_cc_mastercard"),
                ref("payment.payment_icon_cc_visa")])]' />
        </record>
    </data>
</odoo>