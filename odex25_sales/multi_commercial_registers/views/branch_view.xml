<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_view_res_branch_form" model="ir.ui.view">
        <field name="name">res.branch.form</field>
        <field name="model">res.branch</field>
        <field name="inherit_id" ref="branch.branch_res_branch_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group" position="before">
                <field name="logo" widget="image" class="oe_left oe_avatar" />
            </xpath>
            <xpath expr="//field[@name='telephone']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='address']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='address']" position="after">
                <field name="telephone_no" />
                <field name="website" widget="url" placeholder="e.g. www.odoo.com" />
                <field name="po_no" />
                <field name="location" />
                <field name="email" />
                <field name="hr_email" />
                <field name="vat" readonly="1" />
                <field name="branch_registry" />
                <field name="currency_id" />
                <field name="report_footer" />
            </xpath>

            <xpath expr="//field[@name='company_id']" position="after">
                <label for="street" string="Address" />
                <div class="o_address_format">
                    <field name="street" placeholder="Street..." class="o_address_street" />
                    <field name="city" placeholder="City" class="o_address_city" />
                    <field name="state_id" placeholder="State" class="o_address_state" domain="[('country_id', '=', country_id)]"/>
                    <field name="country_id" placeholder="Country" class="o_address_country" />
                    <field name="zip" placeholder="ZIP" class="o_address_zip" />
                </div>
                <field name="partner_id" />
                <field name="report_header" />
            </xpath>
            <xpath expr="//sheet/group" position="inside">
                <group string="Social Media" name="social_media">
                    <field name="social_twitter" />
                    <field name="social_facebook" />
                    <field name="social_github" />
                    <field name="social_linkedin" />
                    <field name="social_youtube" />
                    <field name="social_googleplus" />
                </group>
            </xpath>
        </field>
    </record>
    <template id="assets_for_branch" inherit_id="point_of_sale.assets">
        <xpath expr="." position="inside">
            <script type="text/javascript"
                src="/multi_commercial_registers/static/src/js/pos_extended.js"></script>
        </xpath>
    </template>
</odoo>