<?xml version="1.0"?>
<odoo>
    <record id="pos_config_view_form" model="ir.ui.view">
        <field name="name">pos.config.form</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='allowed_branches']" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box" id="branch_invoicing">
                    <div class="o_setting_left_pane">
                        <field name="print_by_branch"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="print_by_branch"/>
                        <div class="text-muted">
                            Print the invoice by branch
                        </div>

                    </div>
                </div>
            </xpath>
            <xpath expr="//field[@name='branch_id']" position="attributes">
                <attribute name="attrs">{'required': [('print_by_branch', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>