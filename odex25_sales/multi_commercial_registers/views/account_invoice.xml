<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_account_invoice_branch_form1_print_with_branch_inheritt">
        <field name="name">account.invoice.customer.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='period_id']" position="before">
                <field name="print_by_branch"/>
            </xpath>
            <xpath expr="//field[@name='branch_id']" position="attributes">
                <attribute name="attrs">{'required': [('print_by_branch', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
