<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="product_form_view_procurement_button_to_add_group" model="ir.ui.view">
            <field name="name">product.product.procurement.inheritt</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.product_form_view_procurement_button"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='action_update_quantity_on_hand']" position="attributes">
                    <attribute name="groups">update_qty_by_manager.inventory_manager_group</attribute>
                </xpath>
            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="product_product_view_form_easy_inherit_stock_to_add_group" model="ir.ui.view">
            <field name="name">product.product.procurement.inheritt</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.product_product_view_form_easy_inherit_stock"/>
            <field name="arch" type="xml">

                <xpath expr="//header/button[@name='action_update_quantity_on_hand']" position="attributes">
                    <attribute name="groups">update_qty_by_manager.inventory_manager_group</attribute>
                </xpath>
            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="product_template_form_view_procurement_button_to_add_group" model="ir.ui.view">
            <field name="name">product.template_procurement.inheritt</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.product_template_form_view_procurement_button"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='action_update_quantity_on_hand']" position="attributes">
                    <attribute name="groups">update_qty_by_manager.inventory_manager_group</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>