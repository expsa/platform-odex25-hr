<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="acquirer_form_hyperpay_mada" model="ir.ui.view">
            <field name="name">acquirer.form.hyperpay_mada</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form"/>
            <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer"]' position='after'>
                    <group attrs="{'invisible': [('provider', '!=', 'hyperpay_mada')]}">
                        <field name="hyperpay_mada_entity_id"/>
                        <field name="hyperpay_mada_authorization_bearer"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
