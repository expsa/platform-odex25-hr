<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <!-- Inherit Form View to Modify it -->
        <record id="product_template_form_view_inherit_ttc_price" model="ir.ui.view">
            <field name="name">product.template.inherit.form.ttc_price</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='list_price']" position="after">
                    <field name="price_with_taxe" class="oe_inline" widget='monetary' force_save="True"
                           options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                </xpath>

            </field>
        </record>


    </data>
</odoo>