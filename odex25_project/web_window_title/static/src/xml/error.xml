<?xml version="1.0" encoding="UTF-8"?>
<templates id="custom_templates" xml:space="preserve">

    <!-- Inherit and modify Dialog template -->
    <t t-extend="Dialog">
        <t t-jquery=".modal-title" t-operation="replace">
            <h4 class="modal-title">
                <t t-if="title == 'Odoo Error'">
                    <t t-raw="'Odex Error'"/>
                </t>
                <t t-else="">
                    <t t-raw="title"/>
                </t>
                <span class="o_subtitle text-muted small" t-esc="subtitle"/>
            </h4>
        </t>
    </t>

    <!-- Inherit and modify CrashManager error template -->
    <t t-extend="CrashManager.error">
        <t t-jquery=".o_error_detail" t-operation="replace">
            <div t-att-id="'o_error_detail' + errUID" class="collapse custom-alert-background o_error_detail" role="alert">
                <pre t-esc="widget.message"/>
                <pre t-esc="widget.traceback"/>
            </div>
        </t>
    </t>

</templates>


