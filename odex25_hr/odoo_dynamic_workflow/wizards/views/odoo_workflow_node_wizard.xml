<odoo>
    <data>
        <!--  Alter Node Wizard -->
        <record id="view_form_odoo_workflow_node_wizard" model="ir.ui.view">
            <field name="name">odoo.workflow.node.wizard.form</field>
            <field name="model">odoo.workflow.node.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <separator string="Choosing Alternative Node"/>
                    <span string="The node you want to deactivate is used as a state in some records, Kindly choose an alternative node."/>
                    <group>
                        <group>
                            <field name="workflow_id" invisible="1"/>
                            <field name="node_id" invisible="1"/>
                            <field name="alter_node_id"
                                   domain="[('workflow_id', '=', workflow_id), ('id', '!=', node_id)]"/>
                        </group>
                    </group>
                    <footer>
                        <button name="btn_confirm" string="Confirm" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>