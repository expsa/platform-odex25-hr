<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="exchange_request_employee_rule" model="ir.rule">
            <field name="name">Exchange Request Employee</field>
            <field name="model_id" ref="exchange_request.model_exchange_request"/>        
            <field name="domain_force">[('employee_id.user_id','child_of', [user.id])]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        
        </record>


        <record id="exchange_request_department_manager_rule" model="ir.rule">
            <field name="name">Exchange Request Employee</field>
            <field name="model_id" ref="exchange_request.model_exchange_request"/>        
            <field name="domain_force">['|','|',('employee_id.department_id.manager_id','=',False),
                ('employee_id.department_id.manager_id.user_id','child_of', [user.id]),
                ('employee_id.department_id.parent_id.manager_id.user_id','child_of', [user.id])]</field>
            <field name="groups" eval="[(4, ref('exchange_request.group_department_manager'))]"/>
        </record>

        

        <record id="exchange_request_stock_rule" model="ir.rule">
            <field name="name">Exchange Request Stock User</field>
            <field name="model_id" ref="exchange_request.model_exchange_request"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('stock.group_stock_manager'))]"/>
        </record>
