<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <report string="Committee Meeting Report"
            id="action_report_committee_meeting_minutes"
            model="purchase.requisition"
            report_type="qweb-pdf"
            name="purchase_requisition_custom.committee_meeting_minutes_report"
            file="purchase_requisition_custom.committee_meeting_minutes_report"
            print_report_name="'Committee Meeting Minutes - %s' % (object.name)"/>

    <template id="purchase_internal_layout">
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <div class="header">
            <div class="row">
                <div class="col-3">
                    <ul class="list-inline">
                        <li>
                            <span class="page"/>
                        </li>
                        <li>/</li>
                        <li>
                            <span class="topage"/>
                        </li>
                    </ul>
                </div>
                <div class="col-2 col-offset-2 text-center">
                    <span t-esc="company.name"/>
                </div>
                <div class="col-3 text-right">
                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                </div>
            </div>
        </div>
        <div class="article">
            <t t-raw="0"/>
        </div>
    </template>

    <template id="committee_meeting_minutes_report_document">

        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="purchase_requisition_custom.purchase_layout">
                    <style type="text/css">
                        @font-face {
                        font-family: 'ae_AlMohanad';
                        src: local('ae_AlMohanad'), local('ae_AlMohanad'),
                        url('/purchase_custom_vro/static/fonts/ae_AlMohanad.ttf') format('truetype');
                        }
                        *{
                        font-family: ae_AlMohanad;
                        }
                        .tab, th, td {
                        border: 1px solid black;
                        border-collapse: collapse;
                        }


                    </style>
                    <div class="page">
                        <t t-set="po"
                           t-value="request.env['purchase.order'].search([('requisition_id','=',o.id),('recommendation_order','=',True)],limit=1)"/>

