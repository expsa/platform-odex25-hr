<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
    <!-- Incoming Outgoing Report template -->
    <template id="incoming_outgoing_temp">
        <t t-call="web.html_container">
        <div class="header">
            <div class="row mt32 mb32" style="text-align:left;">
                <div style="border:1px solid white;text-align:center;" class="col-xs-4">
                    <img src='/web/binary/company_logo' style="border:1px solid white;width:100px;max-height: 100px;" alt="Logo"/>                
                </div>
                <div class="col-xs-4" style="border:1px solid white;height:100px;">
                    <div style="background-color:white;font-size:26;text-align:center;font-family:Droid Arabic Naskh">
                            <t t-if="type == 'income'">
                             <span style="background-color:white;font-size:26;">Incoming Stock Report</span>
                            </t>
                            <t t-else="">
                            <span style="background-color:white;font-size:26;">Outgoing Stock Report</span>
                            </t>
                        <!-- <span style="background-color:white;font-size:26;">Incoming and Outgoing Report</span> -->
                    </div>
                </div>
                <div class="col-xs-4"></div>
            </div>
        </div>
        <div class="article">
            <table class="table table-bordered"  style="border: 2px solid black;font-family:Droid Arabic Naskh">
                <thead>
                    <tr>
                        <th colspan="2" style="border:1px solid black;text-align:center;background-color:#a7c4f2;">Duration</th>                        
                        <th rowspan="2" style="border:1px solid black;text-align:center;background-color:#a7c4f2;">Location</th>
                        <th rowspan="2" style="border:1px solid black;text-align:center;background-color:#a7c4f2;">Category</th>
                        <th rowspan="2" style="border:1px solid black;text-align:center;background-color:#a7c4f2;">Product</th>

                    </tr>
                    <tr>
                        <th style="border:1px solid black;text-align:center;background-color:#a7c4f2;">From</th>
                        <th style="border:1px solid black;text-align:center;background-color:#a7c4f2;">To</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="text-align:center;border:1px solid black;"><t t-esc="date_from"/></td>
                        <td style="text-align:center;border:1px solid black;"><t t-esc="date_to"/></td>
                           
                        <td style="text-align:center;border:1px solid black;"><t t-esc="location_id"/></td>
                        <td style="text-align:center;border:1px solid black;"><t t-esc="category"/></td>
                        <td style="text-align:center;border:1px solid black;"><t t-esc="product_ids"/></td>

                              
                    </tr>
                </tbody>
            </table><br/><br/>
            <table class="table table-bordered"  style="border: 2px solid black;width:100%;font-family:Droid Arabic Naskh">
                <thead>
                    <tr>
                        <th rowspan="2" style="border:1px solid black;text-align:center;background-color:#a7c4f2;">#</th>
                        <!-- <th rowspan="2" style="border:1px solid black;text-align:center;background-color:#a7c4f2;">Product Code</th> -->
                        <th rowspan="2" style="border:1px solid black;text-align:center;background-color:#a7c4f2;">Product</th>
                        <th rowspan="2" style="border:1px solid black;text-align:center;background-color:#a7c4f2;">Product UOM</th>
                        <th rowspan="2" style="border:1px solid black;text-align:center;background-color:#a7c4f2;">Opening Qty</th>
                        <t t-if="type == 'income'">
                            <th rowspan="2" style="border:1px solid black;text-align:center;background-color:#a7c4f2;">Incoming</th>
                        </t>
                        <t t-if="type == 'out'">
                            <th rowspan="2" style="border:1px solid black;text-align:center;background-color:#a7c4f2;">Outgoing</th>
                        </t>
                        <th rowspan="2" style="border:1px solid black;text-align:center;background-color:#a7c4f2;">Qty On Hand</th>
                        <!--th rowspan="2" style="border:1px solid black;text-align:center;background-color:#a7c4f2;">Amount</th-->
                    </tr>
                </thead>
                <tbody>
                <t t-set="total" t-value="0"/>
                    <t t-foreach="docs" t-as="o">
                        <tr>
                            <td style="text-align:center;border:1px solid black;"><t t-esc="o_index + 1"/></td>  
                            <!-- <td style="text-align:center;border:1px solid black;"><t t-esc="o['default_code']"/></td>                                            -->
                            <td style="text-align:center;border:1px solid black;"><t t-esc="o['product_name']"/></td>
                            <td style="text-align:center;border:1px solid black;"><t t-esc="o['uom']"/></td>
                            <td style="text-align:center;border:1px solid black;"><t t-esc="o['open_inqty'] - o['open_outqty']"/></td>
                            <t t-if="type == 'income'">
                                <td style="text-align:center;border:1px solid black;"><t t-esc="o['inqty']"/></td>
                            </t>
                            <t t-if="type == 'out'">
                                <td style="text-align:center;border:1px solid black;"><t t-esc="o['outqty']"/></td>
                            </t>
                            <td style="text-align:center;border:1px solid black;"><t t-esc="(o['open_inqty'] - o['open_outqty']) + o['inqty'] - o['outqty']"/></td>
                            <!--td style="text-align:center;"><t t-esc="o['amount']"/></td-->
                            <t t-set="total" t-value="o_index+1"/>
                        </tr>
                    </t>
                    <!--tr>
                        <td style="text-align:center;border:1px solid black;" colspan="9">Number Of Requests</td>
                        <td style="text-align:center;border:1px solid black;"><t t-esc="total"/></td>
                    </tr-->
                    <!--tr>
                        <td style="text-align:center;border:1px solid black;" colspan="6">Total Amounts</td>
                        <td style="text-align:center;border:1px solid black;"><t t-esc="total_amount"/></td>
                    </tr-->
 
                </tbody>
            </table>
        </div>
        <div class="footer">
            <div class="row text-center" style="border-top: 1px solid black;">
                <div class="col-xs-3 col-xs-offset-9 text-right">
                    <center>
                        <ul class="list-inline" style="margin-top:10px;">
                            <li>Page:</li>
                            <li>
                                <span class="page"/>
                            </li>
                            <li>/</li>
                            <li>
                                <span class="topage"/>
                            </li>
                        </ul>
                    </center>
                </div>
            </div>
        </div>
        </t>
    </template>
    
    </data>
    </odoo>
