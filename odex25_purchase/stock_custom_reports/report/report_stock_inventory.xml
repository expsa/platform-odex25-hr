<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock.action_report_inventory" model="ir.actions.report">
        <field name="paperformat_id" ref="stock_custom_reports.stock_custom_paperformat"/>
    </record>
    <template id="custom_report_inventory" name="Stock Inventory Report" inherit_id="stock.report_inventory">
        <xpath expr="//div[hasclass('page')]" position="replace">
            <div class="page">
                <div class="row col-12 mt32 mb32" id="information">
                    <div class="col-4 pull-right" dir="rtl">
                        <table class="table table-borderless" style="width:100%; border: none !important;" dir="rtl">
                            <tr>
                                <th style="text-align:right;">المملكة العربية السعودية</th>
                            </tr>
                            <tr>
                                <th style="text-align:right;">الجهة</th>
                            </tr>
                            <tr>
                                <th style="text-align:right;">ادارة المستودعات</th>
                            </tr>
                            <tr>
                                <th style="text-align:right;">مستودع</th>
                            </tr>
                        </table>
                    </div>
                    <div class="col-4 pull-right" dir="rtl">
                        <center>
                            <h2 classs="text-center">استمارة جرد</h2>
                            <span t-field="o.name"/>
                        </center>
                    </div>
                    <div class="col-4 pull-left" dir="rtl">
                        <table class="table table-borderless" style="width:100%; border: none !important;" dir="rtl">
                            <tr>
                                <th style="text-align:right;">الرقم المتسلسل</th>
                                <td style="text-align:right;border: none !important;">
                                    <span t-esc="o.sequence"/>
                                </td>
                            </tr>
                            <tr>
                                <th style="text-align:right;">تاريخ بداية الجرد</th>
                                <td style="text-align:right;border: none !important;">
                                    <span t-esc="o.date"/>
                                </td>
                            </tr>
                            <tr>
                                <th style="text-align:right;">تاريخ انهاء الجرد</th>
                                <td style="text-align:right;border: none !important;">
                                    <span t-esc="o.accounting_date"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                <t t-set="locations" t-value="o.line_ids.mapped('location_id')"/>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>
                                <strong>الرقم</strong>
                            </th>
                            <th>
                                <strong>مرجع المنتج</strong>
                            </th>
                            <th>
                                <strong>المنتج</strong>
                            </th>
                            <th>
                                <strong>وحدة القياس</strong>
                            </th>
                            <th groups="stock.group_production_lot">
                                <strong>Lot/Serial Number</strong>
                            </th>
                            <th class="text-right">
                                <strong>الرصيد القيدي</strong>
                            </th>
                            <th class="text-right">
                                <strong>الرصيد الفعلي</strong>
                            </th>
                            <th class="text-right">
                                <strong>الزيادة</strong>
                            </th>
                            <th class="text-right">
                                <strong>النقص</strong>
                            </th>
                            <th class="text-right">
                                <strong>الملاحظات</strong>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="index" t-value="0"/>
                        <t t-foreach="locations" t-as="location">
                            <tr t-foreach="o.line_ids.filtered(lambda line: line.location_id.id == location.id)"
                                t-as="line">
                                <t t-set="index" t-value="index + 1"/>
                                <td>
                                    <span t-esc="index"/>
                                </td>
                                <td>
                                    <span t-field="line.product_default_code"/>
                                </td>
                                <td>
                                    <span t-field="line.product_id"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                </td>
                                <td groups="stock.group_production_lot">
                                    <span t-field="line.prod_lot_id"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.theoretical_qty"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.product_qty"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.increase"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.decrease"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.note"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <div class="clearfix mt32 mb32 mt-5"/>
                <div class="row col-12 pt32 pt32">
                    <div class="col-4 pull-right" dir="rtl">
                        <div class="col-auto mw-100 mb-2">
                            <strong>امين المستودع</strong>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>الاسم</strong>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>التاريخ</strong>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>التوقيع</strong>
                        </div>

                    </div>
                    <div class="col-4 pull-right" dir="rtl">
                        <t t-set="members" t-value="o.committee_members"/>
                        <div class="col-auto mw-100 mb-2">
                            <strong>اعضاء لجنة الجرد</strong>
                        </div>
                        <t t-if="members">
                            <t t-foreach="members" t-as="member">
                                <div class="col-auto mw-100 mb-2">
                                    <p t-esc="member.name"/>
                                </div>
                            </t>

                        </t>
                    </div>
                    <div class="col-4 pull-right" dir="rtl">
                        <div class="col-auto mw-100 mb-2">
                            <strong>مدير ادارة المستودعات</strong>
                        </div>

                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>