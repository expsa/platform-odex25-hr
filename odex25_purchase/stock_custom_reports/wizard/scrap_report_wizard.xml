<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Incoming Outgoing Report wizard -->
        <record id="id_incoming_outgoing_report_wizard" model="ir.ui.view">
            <field name="name">Incoming Outgoing Report</field>
            <field name="model">scrap.report.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Scrap">
                    <sheet>
                        <group colspan="2">
                            <group>
                                <field name="date_from" />
                                <field name="location_id" required="1" />
                                <field name="product_ids" widget="many2many_tags" context="{'default_type':'product'}" domain="[('type','=','product'),('categ_id', 'child_of', category_id)]"/>
                             </group>
                            <group>
                                <field name="date_to" />   
                                <field name="category_id" />
                            </group>
                        </group>
                    </sheet> 
                    <footer>
                        <button name="print_report" string="Print" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
<!-- Incoming Outgoing Report Action -->
        <act_window id="scrap_report_action"
                    target="new"
                    name="Scrap Products Report"
                    res_model="scrap.report.wizard"
                    view_mode="form"/>

<!-- Incoming Outgoing Report Menitem -->


<menuitem
            id= "scrap_report_menu"
            name= "Scrap Report"
            parent= "stock_reports_main_menu"
            action= "scrap_report_action"
            groups="group_stock_additional_reports"

        />


</data>
</odoo>
