<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Incoming Outgoing Report wizard -->
        <record id="id_inventory_adjustment_wizard" model="ir.ui.view">
            <field name="name">inventory_adjustment_report</field>
            <field name="model">inventory.adjustment.report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Inventory Adjustment Report">
                    <sheet>
                        <group colspan="2">
                            <group>
                                <field name="date_from" />
                                <field name="location_id" required="1" />
                                <field name="product_ids" widget="many2many_tags" attrs="{'invisible' : [('filter' ,'!=' , 'product')],'required' :[('filter' ,'=' , 'product')] }" context="{'default_type':'product'}" domain="[('type','=','product'),('categ_id', 'child_of', category_id)]"/>
                             </group>
                            <group>
                                <field name="date_to" />   
                                <field name="category_id"  attrs="{'invisible' : [('filter' ,'not in' , ['product','category'])],'required' :[('filter' ,'in' , ['product','category'])] }"/>
                                <field name="filter" required="1"/>
                            </group>
                        </group>
                    </sheet> 
                    <footer>
                        <button name="print_report" string="Print" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
<!-- Incoming Outgoing Report Action -->
        <act_window id="inventory_adjustment_report_action"
                    target="new"
                    name="Inventory Adjustment Report"
                    res_model="inventory.adjustment.report"
                    view_mode="form"/>

<!-- Incoming Outgoing Report Menitem -->


<menuitem
            id= "inventory_adjustment_report_menu"
            name= "Inventory Adjustment Report"
            parent= "stock_reports_main_menu"
            action= "inventory_adjustment_report_action"
            groups="group_stock_additional_reports"

        />


</data>
</odoo>
