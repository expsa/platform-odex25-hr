<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Property Pricing  -->
        <record id="property_re_pricing" model="ir.ui.view">
            <field name="name">re.pricing.tree</field>
            <field name="model">re.pricing</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="property_id"/>
                    <field name="date"/>
                    <field name="city"/>
                    <field name="district"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="type"/>
                    <field name="value"/>
                    <field name="value_per_meter"/>
                </tree>
            </field>
        </record>


        <record id="view_re_pricing_search" model="ir.ui.view">
            <field name="name">re.pricing search</field>
            <field name="model">re.pricing</field>
            <field name="arch" type="xml">
                <search>
                    <field name="property_id"/>
                    <field name="date"/>
                    <field name="city"/>
                    <field name="district"/>
                    <field name="type"/>
                    <field name="value"/>
                    <field name="value_per_meter"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </search>
            </field>
        </record>

        <record id="view_re_pricing_form" model="ir.ui.view">
            <field name="name">re.pricing form</field>
            <field name="model">re.pricing</field>
            <field name="arch" type="xml">
                <form duplicate="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="date"/>
                                <field name="property_id"/>
                            </group>
                            <group>
                                <field name="type" readonly="1"/>
                                <field name="city" readonly="1"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="district" readonly="1"/>
                                <field name="size" readonly="1"/>
                            </group>
                            <group>
                                <field name="value"/>
                                <field name="value_per_meter"/>
                                <field name="offered"/>
                            </group>
                        </group>
                        <group string="Notes">
                            <field name="notes" nolabel="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="open_view_re_pricing_action" model="ir.actions.act_window">
            <field name="name">Property Pricing</field>
            <field name="res_model">re.pricing</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_property_pricing" sequence="1"
                  parent="menu_real_estate_marketing"
                  name="Property Pricing"
                  action="open_view_re_pricing_action"/>
        
    </data>
</odoo>
