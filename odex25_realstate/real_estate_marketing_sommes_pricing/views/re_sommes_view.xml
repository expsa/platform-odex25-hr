<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Sommes -->
        <record id="view_re_sommes_form" model="ir.ui.view">
            <field name="name">Property Somme</field>
            <field name="model">re.sommes</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_confirm" string="Confirm" states="draft" type="object"/>
                        <button name="action_cancel" string="Cancel" states="draft" type="object"/>
                        <button name="action_draft" string="Set To Draft" states="cancel" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="code" readonly="1"/>
                        </h1>
                        <group>
                            <group string="Property Information" attrs="{'readonly':[('state', '!=', 'draft')]}">
                                <field name="name" required="1"/>
                                <field name="date" required="1"/>
                                <field name="property_id" required="1"/>
                                <field name="unit_id"/>
                                <field name="space" readonly="1"/>
                                <field name="district_id" readonly="1"/>
                                <field name="user_id" readonly="1"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group string="Somme" attrs="{'readonly':[('state', '!=', 'draft')]}">
                                <field name="amount" required="1"/>
                                <field name="amount_per_meter" required="1"/>
                                <field name="last_somme" readonly="1"/>
                                <field name="last_somme_meter" readonly="1"/>
                            </group>

                        </group>
                        <notebook>
                            <page string="Notes">
                                <group string="Notes">
                                    <field name="notes" nolabel="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_re_sommes_tree" model="ir.ui.view">
            <field name="name">Property Somme</field>
            <field name="model">re.sommes</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="date"/>
                    <field name="property_id"/>
                    <field name="amount"/>
                    <field name="amount_per_meter"/>
                    <field name="last_somme"/>
                    <field name="last_somme_meter"/>
                </tree>
            </field>
        </record>
        <record id="property_somme_action" model="ir.actions.act_window">
            <field name="name">Property Somme</field>
            <field name="res_model">re.sommes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="property_somme_menu" sequence="3"
                parent="menu_real_estate_marketing"
                name="Property Somme"
                action="property_somme_action"/>

    </data>
</odoo>