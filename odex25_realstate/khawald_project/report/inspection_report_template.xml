                                            <td colspan="3" style="border: 2px solid;">
                                                <p>Done تم Not Done لم يتم</p>
                                                <p>مدير المشروع/Project Manager</p>
                                                <p>التاريخ/Date</p>
                                            </td>
                                            <td style="border: 2px solid;">
                                                <p></p>
                                                <p></p>
                                                <p></p>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="3">
                                                <p>استلام المقاول</p>
                                                <p>Contractor</p>
                                            </td>
                                            <td colspan="3">
                                                الأسم:
                                            </td>
                                            <td colspan="3">
                                                التوقيع:
                                            </td>
                                            <td colspan="3">
                                                التاريخ:
                                            </td>
                                        </tr>


                                    </tbody>
                                </table>
