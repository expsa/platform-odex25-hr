<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_project_task_google_map" model="ir.ui.view">
        <field name="name">view.project.task.google_map</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <google_map string="Maps" lat="task_latitude" lng="task_longitude" color="orange">
                <field name="task_latitude"/>
                <field name="task_longitude"/>
                <field name="partner_id"/>
                <field name="priority"/>
                <field name="tag_ids"/>
                <field name="user_id"/>
                <progressbar field="activity_state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content">
                            <div>
                                <strong class="o_kanban_record_title"><span><field name="name"/></span></strong>
                            </div>
                            <div>
                                <span class="o_kanban_record_subtitle"><field name="partner_id"/></span>
                            </div>
                            <div>
                                <field name="tag_ids"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="priority" widget="priority"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </google_map>
        </field>
    </record>
    <record id="action_project_task_map" model="ir.actions.act_window">
        <field name="name">Google Map</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">google_map</field>
        <field name="view_id" ref="task_maps.view_project_task_google_map"/>
        <field name="domain">[('id', '=', active_id)]</field>
    </record>
    <record id="view_project_task_form_google_maps_inherit" model="ir.ui.view">
        <field name="name">view.project.task.form.google_maps.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="priority" eval="1000"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="geolocalize" string="Geolocalize">
                    <group>
                        <group>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street" widget="gplaces_address_autocomplete" options="{'lat': 'task_latitude', 'lng': 'task_longitude'}"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" context="{'default_country_id': country_id}"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                            </div>
                        </group>
                        <group>
                        </group>
                    </group>
                    <group colspan="2" col="2">
                        <separator string="Geolocation" colspan="2"/>
                        <button string="Geolocalize" name="geo_localize" type="object" icon="fa-check" colspan="2"/>
                        <div>
                            <span class="oe_inline"> ( </span>
                            <span> Lat : </span>
                            <field name="task_latitude" class="oe_inline" no_label="1"/>
                            <span> : Long : </span>
                            <field name="task_longitude" class="oe_inline" nolabel="1"/>
                            <span>) </span>
                        </div>
                    </group>
                </page>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(task_maps.action_project_task_map)d" type="action" class="oe_stat_button"
                context="{'search_default_name': name}" icon="fa-map-marker"
                string="Google Map"
                attrs="{'invisible': ['|',('task_latitude', '=', 0.0), ('task_longitude', '=', 0.0)]}"/>
            </xpath>
        </field>
    </record>

    <record id="project.action_view_task" model="ir.actions.act_window">
        <field name="view_mode">kanban,tree,form,calendar,pivot,graph,activity,google_map</field>
    </record>
    <record id="action_view_task_view_google_map" model="ir.actions.act_window.view">
        <field name="sequence" eval="6"/>
        <field name="view_mode">google_map</field>
        <field name="view_id" ref="view_project_task_google_map"/>
        <field name="act_window_id" ref="project.action_view_task"/>
    </record>
</odoo>