<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Property Sales -->
        <record id="view_re_sales_tree" model="ir.ui.view">
            <field name="name">re.sale tree</field>
            <field name="model">re.sale</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="sell_method"/>
                    <field name="property_id"/>
                    <field name="unit_id"/>
                    <field name="user_id"/>
                    <field name="partner_id"/>
                    <field name="amount"/>
                    <field name="request_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_re_sales_form" model="ir.ui.view">
            <field name="name">re.sale.form</field>
            <field name="model">re.sale</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_register" string="Register" states="draft" type="object"/>
                        <button name="action_approve" string="Approve" states="register" type="object"/>
                        <button name="action_draft" string="Set To Draft" states="register" type="object"/>
                        <button name="action_cancel" string="Cancel" states="draft,register" type="object"/>

                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group string="Property" attrs="{'readonly':[('state', '!=', 'draft')]}">
                                <field name="name" readonly="1"/>
                                <field name="sell_method" required="1" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                <field name="property_id"
                                       domain="[('management_type', '!=', 'external_investment'), ('action_type', '=', 'sale'), ('state', '=', 'approve')]"
                                       required="1" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                <field name="unit_id" on_change="on_change_unit(unit_id)"
                                       domain="[('property_id', '=', property_id),('action_type', '=', 'sale'), ('state', '=', 'available')]"
                                       attrs="{'readonly':[('state', '!=', 'draft')],'invisible': [('sell_method', '!=', 'unit')],
                                       'required': [('sell_method', '=', 'unit')]}"/>
                                <field name="city_id" readonly="1" force_save="1"/>
                                <field name="district_id" readonly="1" force_save="1"/>
                                <field name="total_property_size" readonly="1" force_save="1"/>
                                <field name="amount" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                <field name="amount_per_meter" readonly="1" force_save="1"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                            <group string="Property Information" attrs="{'readonly':[('state', '!=', 'draft')]}">
                                <field name="request_date" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                <field name="user_id" invisible="1"/>
                                <field name="partner_id" required="1" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                <field name="is_intermediary" attrs="{'readonly':[('state', '!=', 'draft')]}"
                                       string="Is Intermediary"/>
                                <field name="intermediary_id"
                                       attrs="{'invisible':[('is_intermediary', '=', False)],'readonly':[('state', '!=', 'draft')],'required':[('is_intermediary','=', True)]}"/>
                            </group>
                            <group string="Commission" attrs="{'readonly':[('state', '!=', 'draft')]}">
                                <field name="commission_type" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                <label for="commission_percentage" string="Commission Percentage"
                                       attrs="{'invisible':[('commission_type','!=','percentage')],'readonly':[('state', '!=', 'draft')]}"/>
                                <div attrs="{'invisible':[('commission_type','!=','percentage')],'readonly':[('state', '!=', 'draft')]}">
                                    <field name="commission_percentage" attrs="{'readonly':[('state', '!=', 'draft')]}"
                                           class="oe_inline"/>
                                    %%
                                </div>
                                <field name="commission_amount"
                                       attrs="{'invisible':[('commission_type','==',False)],'readonly':[('state', '!=', 'draft')]}"/>
                            </group>
                            <group string="Intermediary"
                                   attrs="{'readonly':[('state', '!=', 'draft')],'invisible':[('is_intermediary', '=', False)]}">
                                <field name="intermediary_commission_type"/>
                                <label for="intermediary_commission_percentage"
                                       string="Intermediary Commission Percentage"
                                       attrs="{'invisible':[('intermediary_commission_type','!=','percentage')],'readonly':[('state', '!=', 'draft')]}"/>
                                <div attrs="{'invisible':[('intermediary_commission_type','!=','percentage')],'readonly':[('state', '!=', 'draft')]}">
                                    <field name="intermediary_commission_percentage" class="oe_inline"
                                           on_change="onchange_intermediary_commission_percentage(copied_commission_amount,intermediary_commission_percentage)"/>
                                    %%
                                </div>
                                <field name="intermediary_commission_amount"
                                       attrs="{'invisible':[('intermediary_commission_type','==',False)],'readonly':[('state', '!=', 'draft')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="note" string="Notes">
                                <group string="Notes">
                                    <field name="notes" nolabel="1"/>
                                </group>
                            </page>
                            <page name="payment_info" string="Payment Information">
                                <group string="Payment Records">
                                    <field name="move_id" force_save="1" readonly="1"/>
                                </group>
                            </page>
                            <page string="Customer Confession">
                                <field name="cusomer_confession"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="open_view_re_sales_action" model="ir.actions.act_window">
            <field name="name">Property Sales</field>
            <field name="res_model">re.sale</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_property_sales" sequence="1"
                  parent="menu_real_estate_marketing"
                  name="Property Sales"
                  action="open_view_re_sales_action"
                  groups="real_estate_marketing.group_sale_marketer_normal_user"/>

    </data>
</odoo>
