<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="1">

        <record model="ir.module.category" id="module_category_real_estate_marketing">
            <field name="name">Real Estate Marketing</field>
            <field name="sequence">8</field>
        </record>

        <record model="ir.module.category" id="module_category_sale_marketing">
            <field name="name">Sales Marketer</field>
            <field name="sequence">8</field>
        </record>


        <record id="group_marketer_normal_user" model="res.groups">
            <field name="name">Marketer - Normal user</field>
            <field name="category_id" ref="real_estate_marketing.module_category_real_estate_marketing"/>
        </record>

        <record id="group_marketer_manager_user" model="res.groups">
            <field name="name">Marketer - Manager</field>
            <field name="category_id" ref="real_estate_marketing.module_category_real_estate_marketing"/>
            <field name="implied_ids" eval="[(4, ref('real_estate_marketing.group_marketer_normal_user'))]"/>
        </record>

        <record id="group_sale_marketer_normal_user" model="res.groups">
            <field name="name">Sales Marketer - Normal user</field>
            <field name="category_id" ref="real_estate_marketing.module_category_sale_marketing"/>
        </record>

        <record id="group_sale_marketer_manager_user" model="res.groups">
            <field name="name">Sales Marketer - Manager</field>
            <field name="category_id" ref="real_estate_marketing.module_category_sale_marketing"/>
            <field name="implied_ids" eval="[(4, ref('real_estate_marketing.group_sale_marketer_normal_user'))]"/>
        </record>

    </data>
</odoo>