<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pos_config_view_form_inherit_sale_total_discount" model="ir.ui.view">
        <field name="name">pos.config.form.inherit.sale.total.discount</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='module_pos_discount']/ancestor-or-self::div[hasclass('o_setting_box')]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <div id="pricing" position="inside">
                <div class="col-xs-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="total_discount" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="total_discount" />
                        <div class="text-muted">
                            Allow global discounts distributed among lines on orders 
                        </div>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="total_discount_limit" string="Global discount limit (%)"/>
                        <div class="text-muted">
                            This limit cannot be exceeded while applying global discount
                        </div>
                        <field name="total_discount_limit"/>
                    </div>
                </div>
<!--                <div class="col-xs-12 col-md-6 o_setting_box">-->
<!--                    <div class="o_setting_right_pane">-->
<!--                        <label for="total_discount_limit" string="Global discount limit (%)"/>-->
<!--                        <div class="text-muted">-->
<!--                            This limit cannot be exceeded while applying global discount-->
<!--                        </div>-->
<!--                        <field name="total_discount_limit"/>-->
<!--                    </div>-->
<!--                </div>-->
            </div>
        </field>
    </record>

</odoo>